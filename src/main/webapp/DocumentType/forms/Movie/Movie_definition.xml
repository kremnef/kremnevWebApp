<?xml version="1.0"?>

<fd:form 
         xmlns:fd="http://apache.org/cocoon/forms/1.0#definition"
         xmlns:i18n="http://apache.org/cocoon/i18n/2.1">
    <fd:widgets>
        <fd:group id="Movie">

            <fd:widgets>
                <fd:field id="title">
                    <fd:label>
                        <i18n:text key="Title"/>
                    </fd:label>
                    <fd:datatype base="string">
                    </fd:datatype>
                    <fd:validation>
                        <fd:length max="100"/>
                    </fd:validation>
                </fd:field>
                <fd:field id="description">
                    <fd:label>
                        <i18n:text key="Description"/>
                    </fd:label>
                    <fd:datatype base="string">
                    </fd:datatype>
                    <fd:validation>
                        <fd:length max="200"/>
                    </fd:validation>
                </fd:field>
                <fd:field id="link">
                    <fd:label>
                        <i18n:text key="Link"/>
                    </fd:label>
                    <fd:datatype base="string">
                    </fd:datatype>
                    <fd:validation>
                        <fd:length max="200"/>
                    </fd:validation>
                </fd:field>
                <fd:field id="width">
                    <fd:initial-value>800</fd:initial-value>
                    <fd:label>
                        <i18n:text key="Width"/>
                    </fd:label>
                    <fd:datatype base="integer">
                        <fd:convertor type="plain"/>
                    </fd:datatype>
                    <fd:validation>
                        <fd:range min="0" max="800" />
                    </fd:validation>
                </fd:field>
                <fd:field id="height">
                    <fd:initial-value>600</fd:initial-value>
                    <fd:label>
                        <i18n:text key="Height"/>
                    </fd:label>
                    <fd:datatype base="integer"/>
                    <fd:validation>
                        <fd:range min="0" max="600" />
                    </fd:validation>
                </fd:field>
            </fd:widgets>
        </fd:group>
        <fd:submit id="saveDocumentType">
            <fd:label><i18n:text key="Save"/></fd:label>
        </fd:submit>
    </fd:widgets>

</fd:form>