<?xml version="1.0"?>

<jx:template xmlns:jx="http://apache.org/cocoon/templates/jx/1.0"
             xmlns:ft="http://apache.org/cocoon/forms/1.0#template"
             xmlns:fi="http://apache.org/cocoon/forms/1.0#instance"
             xmlns:i18n="http://apache.org/cocoon/i18n/2.1">
    <!--<jx:import uri="servlet:forms:/resource/internal/generation/jx-macros.xml"/>-->
    <jx:import uri="context:/DocumentType/forms/Common/template.xml"/>

    <!--<content>-->
        <!--<userDataMacro/>-->
        <!--<parentObjects />-->
        <ft:form-template id="dynamicForm" location="${cocoon.request.getAttribute('dynamicForm')}" ajax-action="${cocoon.session.getAttribute('dynamicForm.id')}.continue" action="${cocoon.session.getAttribute('dynamicForm.id')}.continue" method="POST" ajax="false">
            <!--<h3>-->
                <!--<a href="editDocument?id=#{viewData/document/@id}&amp;documentTypeId=#{viewData/documentTypeId}">-->
                    <!--<i18n:text key="Document"/>-->
                    <!--ID #{viewData/document/@id}-->
                <!--</a>-->
            <!--</h3>-->
            <ft:group id="Partner">
                <fi:group>
                    <!--<fi:styling type="tabs"/>
                    <fi:state>
                        <ft:widget id="tab-state"/>
                    </fi:state>-->
                    <fi:items>
                        <ft:widget id="add"/>
                        <jx:if test="${widget.getSize() > 0}">
                            <ft:widget id="remove"/>
                        </jx:if>
                        <ft:repeater id="categories">
                            <ft:repeater-rows>
                                <ft:widget-label id="heading" />
                                <ft:widget id="heading">
                                    <fi:styling size="50"/>
                                </ft:widget>

                                <fi:group>
                                    <fi:styling layout="columns"/>
                                    <fi:items>

                                        <ft:repeater id="PartnerList">
                                            <div>
                                                            <!--<ft:repeater-widget-label widget-id="name"/>-->
                                                            <!--<ft:repeater-widget-label widget-id="logo"/>-->
                                                            <!--<ft:repeater-widget-label widget-id="url"/>-->
                                                            <!--<ft:repeater-widget-label widget-id="select"/>-->
                                                <ul class="partner-list">
                                                    <ft:repeater-rows>
                                                        <li>
                                                         <ul>
                                                            <li>
                                                                <ft:widget id="name">
                                                                    <fi:styling size="30"/>
                                                                </ft:widget>
                                                            </li>
                                                            <li>
                                                                <ft:widget id="logo">
                                                                    <fi:styling size="30"/>
                                                                </ft:widget>
                                                            </li>
                                                            <li>
                                                                <ft:widget id="url">
                                                                    <fi:styling size="30"/>
                                                                </ft:widget>
                                                            </li>
                                                            <li>
                                                                <jx:choose>
                                                                    <jx:when test="${repeaterLoop.first}">
                                                                        <img src="${servletPath}/resource/img/forms/blank_btn.gif"/>
                                                                    </jx:when>
                                                                    <jx:otherwise>
                                                                        <ft:widget id="up">
                                                                            <fi:styling type="image"
                                                                                        src="${servletPath}/resource/img/forms/move_up.gif"/>
                                                                        </ft:widget>
                                                                    </jx:otherwise>
                                                                </jx:choose>
                                                                <jx:choose>
                                                                    <jx:when test="${repeaterLoop.last}">
                                                                        <img src="${servletPath}/resource/img/forms/blank_btn.gif"/>
                                                                    </jx:when>
                                                                    <jx:otherwise>
                                                                        <ft:widget id="down">
                                                                            <fi:styling type="image"
                                                                                        src="${servletPath}/resource/img/forms/move_down.gif"/>
                                                                        </ft:widget>
                                                                    </jx:otherwise>
                                                                </jx:choose>

                                                            </li>

                                                            <li>
                                                                <ft:widget id="select"/>

                                                            </li>
                                                        </ul>
                                                        </li>
                                                    </ft:repeater-rows>
                                                </ul>
                                            </div>
                                        </ft:repeater>
                                        <ft:widget id="add"/>
                                        <jx:if test="${widget.getSize() > 0}">
                                            <ft:widget id="remove"/>
                                        </jx:if>
                                    </fi:items>
                                </fi:group>
                            </ft:repeater-rows>
                        </ft:repeater>

                    </fi:items>
                </fi:group>
            </ft:group>
            <ft:widget id="saveDocumentType" class="button-primary">
                <fi:styling type="hidden"/>
            </ft:widget>
        </ft:form-template>
    <!--</content>-->
</jx:template>