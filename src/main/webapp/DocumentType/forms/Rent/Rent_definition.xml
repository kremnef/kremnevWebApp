<?xml version="1.0"?>

<fd:form
        xmlns:fd="http://apache.org/cocoon/forms/1.0#definition"
        xmlns:i18n="http://apache.org/cocoon/i18n/2.1">
    <fd:widgets>
        <fd:group id="Rent">

            <fd:widgets>

                <fd:repeater id="Rent-table" initial-size="1" orderable="true">

                    <fd:widgets>

                        <fd:field id="address">
                            <fd:label>
                                <i18n:text i18n:catalogue="documenttypes" key="Rent.address"/>
                            </fd:label>
                            <fd:datatype base="string">
                            </fd:datatype>
                            <fd:validation>
                                <fd:length max="400"/>
                            </fd:validation>
                        </fd:field>

                        <fd:field id="object">
                            <fd:label>
                                <i18n:text i18n:catalogue="documenttypes" key="Rent.object"/>
                            </fd:label>
                            <fd:datatype base="string">
                            </fd:datatype>
                            <fd:validation>
                                <fd:length max="200" />
                            </fd:validation>
                        </fd:field>

                        <fd:field id="object-description">
                            <fd:label>
                                <i18n:text i18n:catalogue="documenttypes" key="Rent.object-description"/>
                            </fd:label>
                            <fd:datatype base="string">
                            </fd:datatype>
                            <!--<fd:validation>
                                <fd:length max="10000" />
                            </fd:validation>-->
                        </fd:field>
                        <fd:field id="building">
                            <fd:label>
                                <i18n:text i18n:catalogue="documenttypes" key="Rent.building"/>
                            </fd:label>
                            <fd:datatype base="string">
                            </fd:datatype>
                            <!--<fd:validation>
                                <fd:length max="100"/>
                            </fd:validation>-->
                        </fd:field>
                        <fd:field id="category">
                            <fd:label>
                                <i18n:text i18n:catalogue="documenttypes" key="Rent.category"/>
                            </fd:label>
                            <fd:datatype base="string">
                            </fd:datatype>
                            <fd:validation>
                                <fd:length max="100"/>
                            </fd:validation>
                        </fd:field>

                        <fd:field id="area">
                            <fd:label>
                                <i18n:text i18n:catalogue="documenttypes" key="Rent.area"/>
                            </fd:label>
                            <fd:datatype base="string">
                            </fd:datatype>
                            <fd:validation>
                                <fd:length max="100"/>
                            </fd:validation>
                        </fd:field>
                        <fd:row-action id="up" command="move-up"/>
                        <fd:row-action id="down" command="move-down"/>

                        <fd:booleanfield id="select">
                            <fd:label>Select</fd:label>
                        </fd:booleanfield>
                    </fd:widgets>
                    <fd:on-create>
                        <fd:javascript>
                            var repeater = widget;
                            print("repeater!! = " + repeater.getSize());
                        </fd:javascript>
                    </fd:on-create>
                </fd:repeater>

                <fd:repeater-action id="remove" command="delete-rows" repeater="Rent-table" select="select">
                    <fd:label><i18n:text i18n:catalogue="documenttypes" key="Rent.removeSelected"/></fd:label>
                </fd:repeater-action>

                <fd:repeater-action id="add" command="add-row" repeater="Rent-table">
                    <fd:label><i18n:text i18n:catalogue="documenttypes" key="Rent.addRow"/></fd:label>

                </fd:repeater-action>

            </fd:widgets>
        </fd:group>
        <fd:submit id="saveDocumentType">
            <fd:label>
                <i18n:text key="Save"/>
            </fd:label>
        </fd:submit>
    </fd:widgets>

</fd:form>