<?xml version="1.0"?>

<jx:template xmlns:jx="http://apache.org/cocoon/templates/jx/1.0"
             xmlns:ft="http://apache.org/cocoon/forms/1.0#template"
             xmlns:fi="http://apache.org/cocoon/forms/1.0#instance"
             xmlns:i18n="http://apache.org/cocoon/i18n/2.1">
    <!--<jx:import uri="servlet:forms:/resource/internal/generation/jx-macros.xml"/>-->
    <jx:import uri="context:/DocumentType/forms/Common/template.xml"/>

    <ft:form-template id="dynamicForm" location="${cocoon.request.getAttribute('dynamicForm')}"
                      ajax-action="${cocoon.session.getAttribute('dynamicForm.id')}.continue"
                      action="${cocoon.session.getAttribute('dynamicForm.id')}.continue" method="POST" ajax="false">


        <ft:group id="Rent">
            <fi:group>
                <fi:styling layout="columns"/>
                <fi:items>

                    <ft:repeater id="Rent-table">
                        <table border="0" class="order table">
                            <thead>
                                <tr>
                                    <th width="30%" class="manage-column">
                                        <ft:repeater-widget-label widget-id="address"/>
                                    </th>
                                    <th width="15%" class="manage-column">
                                        <ft:repeater-widget-label widget-id="object"/>
                                        <br/>
                                        <ft:repeater-widget-label widget-id="object-description"/>
                                    </th>
                                    <th width="30%" class="manage-column">
                                        <ft:repeater-widget-label widget-id="building"/>
                                    </th>
                                    <th width="15%" class="manage-column">
                                        <ft:repeater-widget-label widget-id="category"/>
                                    </th>
                                    <th width="15%" class="manage-column">
                                        <ft:repeater-widget-label widget-id="area"/>
                                    </th>
                                    <th width="5%">
                                        <ft:repeater-widget-label widget-id="select"/>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <ft:repeater-rows>
                                    <tr class="forms-row">
                                        <td>
                                            <ft:widget id="address">
                                                <fi:styling size="30%"/>
                                            </ft:widget>
                                        </td>
                                        <td>
                                            <ft:widget id="object">
                                                <fi:styling size="15%"/>
                                            </ft:widget>
                                            <br/>
                                            <ft:widget id="object-description">
                                                <fi:styling cols="4" rows="10" type="textarea"/>
                                            </ft:widget>

                                        </td>
                                        <td>
                                            <ft:widget id="building">
                                                <fi:styling cols="4" rows="10" type="textarea"/>
                                            </ft:widget>

                                        </td>

                                        <td>
                                            <ft:widget id="category">
                                                <fi:styling size="15%"/>
                                            </ft:widget>

                                        </td>
                                        <td>
                                            <ft:widget id="area">
                                                <fi:styling size="15%"/>
                                            </ft:widget>

                                        </td>
                                        <td>
                                            <ft:widget id="select"/>

                                        </td>
                                    </tr>
                                </ft:repeater-rows>


                            </tbody>
                        </table>
                    </ft:repeater>
                    <ft:widget id="add"/>
                    <jx:if test="${widget.getSize() > 0}">
                        <ft:widget id="remove"/>
                    </jx:if>
                </fi:items>
            </fi:group>
        </ft:group>
        <ft:widget id="saveDocumentType" class="button-primary">
            <fi:styling type="hidden"/>
        </ft:widget>
    </ft:form-template>

    <!--</content>-->
</jx:template>